
# LOGFILE is set to be a File appender using a PatternLayout.
log4j.appender.LogStock=org.apache.log4j.FileAppender
log4j.appender.LogStock.File=ModificarStockDB.log
log4j.appender.LogStock.Append=true
log4j.appender.LogStock.layout=org.apache.log4j.PatternLayout
log4j.appender.LogStock.layout.ConversionPattern=%d{ABSOLUTE} %5p %c{1}:%L - %m%n
log4j.logger.logger.ModificarStockDB=DEBUG,LogStock